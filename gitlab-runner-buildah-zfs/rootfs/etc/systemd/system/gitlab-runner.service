[Unit]
Description=GitLab Runner - Buildah
ConditionFileIsExecutable=/usr/local/bin/gitlab-runner
After=network.target nss-lookup.target systemd-sysusers.service systemd-tmpfiles-setup.service
Requires=systemd-sysusers.service systemd-tmpfiles-setup.service

[Service]
EnvironmentFile=-/etc/sysconfig/gitlab-runner
ExecStart=/usr/local/bin/gitlab-runner run --working-directory=/var/lib/gitlab-runner --config=/etc/gitlab-runner/config.toml --service=gitlab-runner --user=root
StartLimitBurst=10
StartLimitInterval=5
Restart=always
RestartSec=120

[Install]
WantedBy=multi-user.target
