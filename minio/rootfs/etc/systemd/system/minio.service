[Unit]
Description=MinIO
Documentation=https://docs.min.io
After=network.target nss-lookup.target systemd-sysusers.service systemd-tmpfiles-setup.service
Requires=systemd-sysusers.service systemd-tmpfiles-setup.service
AssertFileIsExecutable=/usr/local/bin/minio

[Service]
WorkingDirectory=/run/minio
User=minio
Group=minio
EnvironmentFile=/etc/default/minio
EnvironmentFile=-/etc/sysconfig/minio
EnvironmentFile=-/run/secrets/minio-root-password
ExecStart=/usr/local/bin/minio server --address $MINIO_ADDRESS --listeners $MINIO_LISTENERS --console-address $MINIO_CONSOLE_ADDRESS $MINIO_OPTS $MINIO_VOLUMES
Restart=always
LimitNOFILE=65536
TimeoutStopSec=infinity
SendSIGKILL=no

[Install]
WantedBy=multi-user.target
