[Unit]
Description=RustDesk Relay Server
Documentation=https://rustdesk.com/docs/
After=network.target nss-lookup.target
AssertFileNotEmpty=/run/secrets/rustdesk

[Service]
WorkingDirectory=/run/rustdesk
EnvironmentFile=/run/secrets/rustdesk
User=rustdesk
Group=rustdesk
ExecStart=/usr/local/bin/hbbr -k "${RUSTDESK_KEY}"
Restart=always

[Install]
WantedBy=multi-user.target
